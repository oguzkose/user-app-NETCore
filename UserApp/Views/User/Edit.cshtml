@model UserViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form action="../../../User/edit" method="post">

    <div class=" container">
        <div class="row">
            @Html.LabelFor(x => x.Id, null, new { @class = "col-md-2" })
            <div class="col-md-2">@Html.DisplayFor(x => x.Id)</div>
            @Html.HiddenFor(x => x.Id)
        </div>
        <br />
        <div class="row">
            @Html.LabelFor(x => x.Name, null, new { @class = "col-md-2" })
            @Html.TextBoxFor(x => x.Name, null, new { @class = "col-md-3" })
            @Html.ValidationMessageFor(x => x.Name, null, new { @class = "col-md-3 text-danger" })
        </div>
        <br />
        <div class="row">
            @Html.LabelFor(x => x.Surname, null, new { @class = "col-md-2" })
            @Html.TextBoxFor(x => x.Surname, null, new { @class = "col-md-3" })
            @Html.ValidationMessageFor(x => x.Surname, null, new { @class = "col-md-3 text-danger" })
        </div>
        <br />
        <div class="row">
            @Html.LabelFor(x => x.BirthDate, null, new { @class = "col-md-2" })
            @Html.TextBoxFor(x => x.BirthDate, null, new { @class = "col-md-3 ", type = "date" })
            @Html.ValidationMessageFor(x => x.BirthDate, null, new { @class = "col-md-3 text-danger" })
        </div>
        <br />
        <div class="row">
            @Html.LabelFor(x => x.Email, null, new { @class = "col-md-2" })
            @Html.TextBoxFor(x => x.Email, null, new { @class = "col-md-3" })
            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "col-md-3 text-danger" })
        </div>
        <br />
        <div class="row">
            @Html.LabelFor(x => x.Gender, null, new { @class = "col-md-2" })
            @Html.DropDownListFor(x => x.Gender, (SelectListItem[])ViewData["GenderList"], new { @class = "col-md-3" })
            @Html.ValidationMessageFor(x => x.Gender, null, new { @class = "col-md-3 text-danger" })
        </div>
        <br />
        <div class="row">
            @Html.LabelFor(x => x.GitHubAccountUrl, null, new { @class = "col-md-2" })
            @Html.TextBoxFor(x => x.GitHubAccountUrl, null, new { @class = "col-md-3" })
            @Html.ValidationMessageFor(x => x.GitHubAccountUrl, null, new { @class = "col-md-3 text-danger" })
        </div>
        <br />
        <div><button class="btn btn-primary" type="submit">Değişiklikleri Kaydet</button></div>
    </div>

</form>